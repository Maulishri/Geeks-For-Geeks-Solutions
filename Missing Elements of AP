#include <iostream>
using namespace std;

int main() {
	//code
	int n;
	cin>>n;
	while(n>0)
	{
	    int l, sum2=0;
	    cin>>l;
	    int a[l];
	    for(int i=0; i<l; i++)
	        cin>>a[i];
	   int sum1= (l+1)*(a[0]+a[l-1])/2;
	   for(int i=0; i<l; i++)
	   {
	       sum2+= a[i];
	   }
	   int d= sum1-sum2;
	   cout<<d<<endl;
	
	    n--;
	}
	return 0;
}
